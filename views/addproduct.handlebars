<h1>Add Discount on your Products</h1>
{{#if error}} <span>{{error}}</span>{{/if}}
<form method="POST" action="/product/add">
  <div class="form-group">
    <label>ID</label>
    <input type="text" name="id" class="form-control" placeholder="Add Product ID">
  </div>
  <div class="form-group">
    <label>Product Name</label>
    <input type="text" name="product_name" class="form-control" placeholder="Product Name">
  </div>
  <div class="form-group">
    <label>Discount</label>
    <select name="discount" class="form-control">
      <option value="discount">Discount</option>
        <option>10%</option>
        <option>20%</option>
        <option>30%</option>
        <option>35%</option>
    </select>
  </div>
  <div class="form-group">
    <label>Valid Till</label>
      <input type="date" name="product_date" class="form-control" id="date-picker">   
  </div>
  <script>
        var date = new Date();
        var year = date.getFullYear();
        var month = date.getMonth()+1;
        var todayDate = String(date.getDate()).padStart(2,'0');
        var datePattern = year + '-' + month + '-' + todayDate;
        document.getElementById("date-picker").value = datePattern;
      </script>
  <input type="submit" class="btn btn-primary" value="Save">
</form>
